{
  "name": "portal-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "packages/portal-app/src",
  "tags": ["frontend"],
  "targets": {
    "bundle": {
      "executor": "@app-speed/angular-rollup:bundle",
      "options": {
        "main": "{projectRoot}/src/main.ts",
        "index": "{projectRoot}/src/index.html",
        "outputPath": "dist/{projectRoot}",
        "maxChunks": 4
      },
      "dependsOn": ["build"]
    },
    "build": {
      "executor": "@nx/angular:browser-esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "index": "{projectRoot}/src/index.html",
        "main": "{projectRoot}/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "assets": ["{projectRoot}/src/favicon.ico", "{projectRoot}/src/assets"],
        "styles": ["@angular/material/prebuilt-themes/indigo-pink.css", "{projectRoot}/src/styles.scss"],
        "statsJson": true
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "477kb",
              "maximumError": "500kb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "configurations": {
        "production": {
          "forceEsbuild": true,
          "buildTarget": "portal-app:build:production"
        },
        "development": {
          "forceEsbuild": true,
          "buildTarget": "portal-app:build:production"
        }
      },
      "defaultConfiguration": "production"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "portal-app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{workspaceRoot}/{projectRoot}/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "portal-app:build"
      }
    },
    "deploy": {
      "executor": "@app-speed/aws-deploy:s3-upload",
      "dependsOn": ["bundle"],
      "options": {
        "upload": "dist/{projectRoot}"
      },
      "configurations": {
        "production": {
          "bucket": "s3://appspeed.dev"
        },
        "development": {
          "bucket": "s3://dev.appspeed.dev"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
